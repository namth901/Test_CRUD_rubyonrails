<h1>Edit Task</h1>
<%= form_for :task, url: task_path, method: :patch do |f| %>
<%= render 'shared/error_messages', object: f.object %>
	<p>
		<%= f.label :content %><br/>
		<%= f.text_field :content %><br/>
	</p>
	<p>
		<%= f.label :comment %><br/>
		<%=  f.text_area :comment %><br/>
	</p>
	<p>
		<%= f.label :status %><br/>
		<%= f.check_box :status %><br/>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>