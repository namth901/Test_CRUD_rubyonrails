<h1>Add New</h1>
<%= form_for :task, url:tasks_path do |f| %>
	<p>
		<%= f.label :content %><br/>
		<%= f.text_field :content %><br/>
	</p>
	<p>
		<%= f.label :comment %><br/>
		<%= f.text_area :comment %><br/>
	</p>
	<p>
		<%= f.label :status %><br/>
		<%= f.check_box :status %><br/>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>